<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/ll_list_item"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_ranking_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/statistics_horizontal_margin"
        android:layout_marginRight="@dimen/statistics_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="0.5dp"
        >

        <RelativeLayout
            android:id="@+id/rl_ranking_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size_default"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:id="@+id/ll_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_num"
                android:layout_centerVertical="true"
                android:padding="0.5dp"
                >
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:background="@mipmap/icon_ranking_avatar"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignBottom="@id/ll_avatar"
                android:layout_toRightOf="@+id/ll_avatar"
                android:background="@mipmap/icon_ranking_female"
                android:scaleType="fitXY"
                android:layout_marginLeft="2dp"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的昵称"
                android:textSize="@dimen/font_size_default"
                android:textColor="@color/colorRankingFirstFont"
                android:layout_toRightOf="@+id/iv_gender"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="39000 步"
                android:textColor="@color/colorRankingFirstFont"
                android:textSize="@dimen/font_size_default"
                />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>